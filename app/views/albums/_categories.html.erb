<div class='section container albums index'>
  <%= render :partial => '/shared/context', :locals => {:type => 'albums', :title => t('albums.fototeca')} %>
  <div class='section_main row-fluid'>
    <div class='section_content span12'>
      <div class='albums index'>

        <%= render :partial => "featured" %>
        
        <% if Area.count > 0 %>
        <div class='section_heading'><%= t('albums.fototeca') %></div>
        <div class='gob_categories'>
          <div class='categories areas'>
            <% Area.ordered.in_groups_of(3, false).each do |area_group| %>
              <div class='row-fluid'>
                <% area_group.each_with_index do |area, i| %>
                  <%= render :partial => '/albums/category', :locals => {:category => area} %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <% end %>
        
        <% if Album.categories.length > 0 %>
        <div class='section_heading'><%= t('albums.other_albums') %></div>
        <div class='other_categories'>
          <div class='categories'>
            <% Album.categories.in_groups_of(3, false).each do |category_group| %>
              <div class='row-fluid'>
                <% category_group.each_with_index do |category, i| %>
                  <%= render :partial => '/albums/category', :object => category %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

