<div id="tags_<%= category.id %>">
  <%= form_for @category, :url => admin_tree_category_path(category.tree, category), :html => {:method => :put}, :data => {:remote => true} do |f| %>
    <%= f.text_field :tag_list %>
    <%= submit_tag "Guardar" %>
    <%= link_to "Cancelar", "#", :onclick => "$('tags_#{@category.id}').replace('#{escape_javascript(render partial: '/admin/categories/tags', locals: {category: @category})}');return false;" %>
  <% end %>
</div>