<div class="thumbnail">
  <%-
      small_img_tag = document_img_tag(photo, 'n136')
      large_img_tag = document_img_tag(photo, 'n770')
      id = small_img_tag.gsub(/[^a-z0-9]/i, '')

  -%>

  <%= link_to image_tag(small_img_tag), large_img_tag, :id => "photo_#{id}" %>

  <br/>(<%= number_to_human_size(File.size(photo)) %>)
</div>
