
<h1><%= @album.title %></h1>

<table class="admin" width="100%">
  <% @photos.in_groups_of(3, false).each do |photo_group| %>
    <tr>
      <% photo_group.each do |photo| %>
      <td width="33%">
        <h3><%= photo.title %></h3>
        <%= link_to image_tag(photo.version(:n136)), admin_photo_path(photo) %><br/>
        <%= photo.tags.collect { |tag| content_tag(:span, tag.name, :class => 'tag')}.join(' ') %><br/>
      </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= will_paginate @photos %>