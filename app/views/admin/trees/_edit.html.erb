<div id='edit_container'>
  <%= form_for(@tree, :url => admin_tree_path(@tree), :html => {:method => :put})  do |f| %>
    <%= error_messages(f.object) %>
    <table class="admin">
      <tr>
        <td>Nombre:</td>
        <td><%= f.text_field :name_es, :id => "name_es" %></td>
      </tr>
      <tr>
        <td>Izena:</td>
        <td><%= f.text_field :name_eu, :id => "name_eu" %></td>
      </tr>
      <tr>
        <td>Name:</td>
        <td><%= f.text_field :name_en, :id => "name_en" %></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= f.submit "Guardar" %>
          <%= link_to "Cancelar", "#", :onclick => "$('edit_container').innerHTML='';return false;" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>