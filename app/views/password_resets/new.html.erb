<% @title = t('session.Recordatorio') %>

<div class='section container'>
  <div class='section_main row-fluid'>
    <div class='section_content span7'>
      <div class="login_options">
        <div class="login_box login">
          <h4><%= t('password_resets.new.type_your_email') %></h4>

          <%= form_tag password_resets_path,  :id => 'password_reset', :class => "form-horizontal" do %>
            <div class='control-group'>
              <%= label_tag :email, t('email'), :class => "col-sm-2 control-label" %>
              <div class='controls'>
                <%= text_field_tag :email, params[:email], :type => "email", :class => "form-control" %>
              </div>
            </div>  
            <div class="form-actions">  
              <%= submit_tag t('enviar'), :class => 'submit irekia_btn' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>  
    <div class='section_aside span5'>
      <div class="login_box register">
        <h4><%=raw t('session.Si_aun_no_estas_registrado')%></h4>
        <ul class="button">
          <li>
            <%=raw link_to t('session.date_de_alta'), signup_path(:return_to => params[:return_to]) %>
          </li>
        </ul>
        <h4 class="twitter"><%=raw t('session.o_si_lo_prefieres') %></h4>
        <%= render :partial => '/sessions/social_signin' %>
      </div>
    </div>      
  </div>
</div>

