<div class='section container'>
  <div class='section_main row-fluid'>
    <div class='section_content span7'>
      <div class="login_options">
        <div class="login_box login">
          <h4><%= t('password_resets.new.title') %></h4>
          <p><%= t('password_resets.edit.type_new_password') %></p>

          <%= form_for @user, as:  :user, url: password_reset_path(params[:id]), html: {method: :put, id: 'password_reset'} do |f| %>
            <%= content_tag(:div, @user.errors.to_h.to_a.to_json, :id => 'has-errors', :"data-class" => 'user', :style => 'display:none') if @user.errors.present? %>
            <div class='control-group'>
              <%= f.label :password, '', :class => 'control-label' %>
              <div class='controls'>
                <%= f.password_field :password, :class => 'input-xlarge' %>
              </div>
            </div>  
            <div class='control-group'>
              <%= f.label :password_confirmation, '', :class => 'control-label' %>
              <div class='controls'>
                <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
              </div>
            </div>  
            <div class="form-actions">  
              <%= f.submit t('guardar'), :class => 'submit irekia_btn' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</div>

