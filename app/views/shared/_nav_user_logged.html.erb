<li class='nav_user_logged'>
  <span class='avatar'><%= avatar current_user %></span>
  <span class="username"><%= link_to(current_user.name, account_path) %></span>
  <%= content_tag(:span, link_to("<i class='ico_alert'>#{notifications_count}</i>".html_safe, notifications_account_path, :class => "toggle_notifications #{'empty_' if notifications_count.zero? }count"), :class => 'notifications') if notifications_count > 0 %>
</li>                
<li class='dropdown nav_settings navbar'>
    <%= link_to "<i class='ico_settings'></i><span class='link_text'>#{t('account.configuracion')}</span>".html_safe, '#', :"data-toggle" => 'dropdown', :class => 'dropdown-toggle' %>
    <ul class='dropdown-menu'>
      <li><%= link_to default_url_title_for_user(current_user), default_url_for_user, :class => 'admin' %></li>
      <li><%= link_to t('account.edit_profile'), edit_account_path, :class => 'settings' %></li>
      <li><%= link_to t('salir'), logout_path, :method => 'delete', :class => 'logout' %></li>
    </ul>
</li>
